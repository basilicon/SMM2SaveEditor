<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="240" d:DesignHeight="500"
             x:Class="SMM2SaveEditor.EntityEditor">
	<DockPanel LastChildFill="False">
		<Grid ColumnDefinitions="*,*" DockPanel.Dock="Bottom">
			<Button Grid.Column="0" Name="Apply" HorizontalAlignment="Center">
				<TextBlock Text="Apply" TextAlignment="Center"/>
			</Button>
			<Button Grid.Column="1" Name="Cancel" HorizontalAlignment="Center">
				<TextBlock Text="Cancel" TextAlignment="Center"/>
			</Button>
		</Grid>
		<ScrollViewer MaxHeight="400" HorizontalScrollBarVisibility="Visible">
			<Grid ColumnDefinitions="*,*" Name="EditorGrid" Margin="0,0,15,0"/>
		</ScrollViewer>
	</DockPanel>
</UserControl>
